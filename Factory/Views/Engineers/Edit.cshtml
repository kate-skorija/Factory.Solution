@{
  Layout = "_Layout";
}

@model Factory.Models.Engineer

<h2>Edit: @Html.DisplayFor(model => model.Name)</h2>

@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.EngineerId)

    @Html.LabelFor(model => model.Name)
    @Html.TextBoxFor(model => model.Name,  new { @class="form-control", required="required" })

    @Html.LabelFor(model => model.Availability)
    @Html.TextBoxFor(model => model.Availability, new { @class="form-control", required="required" })

    @Html.Label("Hire Date");
    @Html.TextBoxFor(model => model.HireDate, new { @type="date", @class="form-control", required="required" });

    @Html.Label("Experience Level");
    @Html.TextBoxFor(model => model.ExperienceLevel, new { @type="number", min="1", max="10", @class="form-control", required="required" });

    <input type="submit" class="btn btn-dark" value="Save" />
}
