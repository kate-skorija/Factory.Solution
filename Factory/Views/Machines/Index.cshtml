@{
  Layout = "_Layout";
}

@using Factory.Models;
@model List<Factory.Models.Machine>;

<h2>Machines</h2>

@if (@Model.Count == 0)
{
  <p>No machines have been added.</p>
}
else 
{
  <ul>
    @foreach (Machine machine in @Model)
    {
      <li>@Html.ActionLink($"{machine.Model}", "Details", new { id = machine.MachineId })</li>
    }
  </ul>
}

<button class="btn">@Html.ActionLink("Add New Machine", "Create")</button>